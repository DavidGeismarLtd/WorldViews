#!/bin/bash -e

# If running the rails server then create or migrate existing database
# This handles both direct rails server and thruster-wrapped server
if [[ "$*" == *"./bin/rails server"* ]] || [[ "$*" == *"./bin/thrust"* ]]; then
  echo "Running database migrations..."
  ./bin/rails db:prepare
  echo "Database ready!"
fi

exec "${@}"
