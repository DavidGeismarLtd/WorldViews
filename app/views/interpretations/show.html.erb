<div class="min-h-screen bg-gray-50">
  <!-- Header with Persona Branding -->
  <div class="relative overflow-hidden" style="background: linear-gradient(135deg, <%= @persona.color_primary %> 0%, <%= @persona.color_secondary %> 100%);">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <!-- Back to Story Link -->
      <div class="mb-6">
        <%= link_to news_story_path(@news_story), class: "inline-flex items-center text-white/90 hover:text-white transition-colors" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Story
        <% end %>
      </div>

      <!-- Persona Info -->
      <div class="flex items-center space-x-4 mb-6">
        <% if @persona.avatar_url.present? %>
          <div class="w-20 h-20 rounded-full overflow-hidden border-4 border-white shadow-lg">
            <%= image_tag @persona.avatar_url, alt: @persona.name, class: "w-full h-full object-cover" %>
          </div>
        <% else %>
          <div class="w-20 h-20 rounded-full flex items-center justify-center text-3xl font-bold text-white border-4 border-white shadow-lg" style="background-color: <%= @persona.color_primary %>;">
            <%= @persona.name[0] %>
          </div>
        <% end %>
        <div>
          <%= link_to persona_path(@persona), class: "text-white hover:underline" do %>
            <h1 class="text-3xl font-bold"><%= @persona.name %></h1>
          <% end %>
          <p class="text-white/90 italic text-lg">"<%= @persona.description %>"</p>
        </div>
      </div>

      <!-- Article Headline -->
      <div class="bg-white/10 backdrop-blur-sm rounded-xl p-6 border border-white/20 mb-6">
        <h2 class="text-2xl font-bold text-white mb-2"><%= @news_story.headline %></h2>
        <div class="flex items-center space-x-4 text-white/80 text-sm">
          <span><%= @news_story.source %></span>
          <span>‚Ä¢</span>
          <span><%= @news_story.published_at.strftime("%B %d, %Y") %></span>
        </div>
      </div>

      <!-- Action Buttons -->
      <div class="flex flex-wrap items-center gap-3">
        <!-- Subscribe Button -->
        <button onclick="alert('üöß Coming soon! Subscribe to get <%= @persona.name %>\'s hot takes delivered to your inbox.')" class="inline-flex items-center px-5 py-2.5 bg-white text-gray-900 rounded-lg font-semibold shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 text-sm">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
          </svg>
          <span>Follow <%= @persona.name %></span>
        </button>

        <!-- Share Dropdown -->
        <div class="relative" data-controller="dropdown">
          <button data-action="click->dropdown#toggle" class="inline-flex items-center px-5 py-2.5 bg-white/20 backdrop-blur-sm text-white border-2 border-white/30 rounded-lg font-semibold hover:bg-white/30 transition-all duration-300 text-sm">
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z"></path>
            </svg>
            <span>Share This Take</span>
          </button>

          <!-- Dropdown Menu -->
          <div data-dropdown-target="menu" class="hidden absolute left-0 mt-2 w-64 bg-white rounded-xl shadow-2xl overflow-hidden z-50 border border-gray-200">
            <div class="p-2">
              <a href="https://twitter.com/intent/tweet?text=<%= CGI.escape("#{@persona.name}'s take on: #{@news_story.headline}") %>&url=<%= CGI.escape(request.original_url) %>" target="_blank" class="flex items-center px-4 py-3 text-gray-700 hover:bg-blue-50 rounded-lg transition-colors group">
                <svg class="w-5 h-5 mr-3 text-blue-400 group-hover:text-blue-500" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
                </svg>
                <div>
                  <div class="font-semibold text-sm">Share on X</div>
                  <div class="text-xs text-gray-500">Post to your timeline</div>
                </div>
              </a>

              <a href="https://www.facebook.com/sharer/sharer.php?u=<%= CGI.escape(request.original_url) %>" target="_blank" class="flex items-center px-4 py-3 text-gray-700 hover:bg-blue-50 rounded-lg transition-colors group">
                <svg class="w-5 h-5 mr-3 text-blue-600 group-hover:text-blue-700" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
                <div>
                  <div class="font-semibold text-sm">Share on Facebook</div>
                  <div class="text-xs text-gray-500">Post to your feed</div>
                </div>
              </a>

              <a href="https://www.reddit.com/submit?url=<%= CGI.escape(request.original_url) %>&title=<%= CGI.escape("#{@persona.name}'s take: #{@news_story.headline}") %>" target="_blank" class="flex items-center px-4 py-3 text-gray-700 hover:bg-orange-50 rounded-lg transition-colors group">
                <svg class="w-5 h-5 mr-3 text-orange-500 group-hover:text-orange-600" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
                </svg>
                <div>
                  <div class="font-semibold text-sm">Share on Reddit</div>
                  <div class="text-xs text-gray-500">Post to a subreddit</div>
                </div>
              </a>

              <button onclick="navigator.clipboard.writeText('<%= request.original_url %>'); this.querySelector('.copy-text').textContent = 'Copied!'; setTimeout(() => this.querySelector('.copy-text').textContent = 'Copy Link', 2000);" class="w-full flex items-center px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors group">
                <svg class="w-5 h-5 mr-3 text-gray-400 group-hover:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                </svg>
                <div class="text-left">
                  <div class="font-semibold text-sm copy-text">Copy Link</div>
                  <div class="text-xs text-gray-500">Share anywhere</div>
                </div>
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <!-- Subscribe to Turbo Stream updates for this interpretation -->
    <%= turbo_stream_from "interpretation_#{@interpretation.id}" %>

    <!-- Detailed Analysis -->
    <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
      <div class="flex items-center space-x-3 mb-6">
        <div class="w-12 h-12 rounded-full flex items-center justify-center text-2xl" style="background-color: <%= @persona.color_primary %>20; color: <%= @persona.color_primary %>;">
          üìù
        </div>
        <h2 class="text-3xl font-bold text-gray-900">Full Analysis</h2>
      </div>

      <div id="detailed_analysis_<%= @interpretation.id %>">
        <%= render "detailed_analysis", interpretation: @interpretation, persona: @persona %>
      </div>

      <!-- Metadata -->
      <div class="mt-8 pt-6 border-t border-gray-200">
        <div class="flex items-center justify-between text-sm text-gray-500">
          <div class="flex items-center space-x-4">
            <span>ü§ñ Generated by <%= @interpretation.llm_model %></span>
            <% if @interpretation.cached? %>
              <span class="px-2 py-1 bg-green-100 text-green-700 rounded">Cached</span>
            <% end %>
          </div>
          <span><%= time_ago_in_words(@interpretation.created_at) %> ago</span>
        </div>
      </div>
    </div>

    <!-- Quick Take (for comparison) -->
    <div class="bg-gray-100 rounded-xl p-6 mb-8">
      <h3 class="text-lg font-bold text-gray-900 mb-3">Quick Take (Summary)</h3>
      <p class="text-gray-700 leading-relaxed"><%= @interpretation.content %></p>
    </div>

    <!-- Read Original Article -->
    <div class="bg-white rounded-xl shadow p-6 text-center">
      <%= link_to @news_story.source_url, target: "_blank", rel: "noopener noreferrer", class: "inline-flex items-center space-x-2 text-blue-600 hover:text-blue-700 font-medium" do %>
        <span>üì∞ Read Original Article at <%= @news_story.source %></span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      <% end %>
    </div>

    <!-- Other Personas' Takes -->
    <div class="mt-12">
      <h3 class="text-2xl font-bold text-gray-900 mb-6">See How Other Personas Interpret This Story</h3>
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <% Persona.active.ordered.where.not(id: @persona.id).each do |other_persona| %>
          <% other_interpretation = @news_story.interpretation_for(other_persona) %>
          <% if other_interpretation %>
            <%= link_to interpretation_path(other_interpretation), class: "block bg-white rounded-xl shadow hover:shadow-lg transition-shadow p-4 border-l-4", style: "border-color: #{other_persona.color_primary};" do %>
              <div class="flex items-center space-x-3 mb-2">
                <% if other_persona.avatar_url.present? %>
                  <div class="w-10 h-10 rounded-full overflow-hidden">
                    <%= image_tag other_persona.avatar_url, alt: other_persona.name, class: "w-full h-full object-cover" %>
                  </div>
                <% else %>
                  <div class="w-10 h-10 rounded-full flex items-center justify-center text-sm font-bold text-white" style="background-color: <%= other_persona.color_primary %>;">
                    <%= other_persona.name[0] %>
                  </div>
                <% end %>
                <div>
                  <h4 class="font-bold text-gray-900"><%= other_persona.name %></h4>
                  <p class="text-xs text-gray-500 italic">"<%= other_persona.description %>"</p>
                </div>
              </div>
              <p class="text-sm text-gray-700 line-clamp-2"><%= other_interpretation.content %></p>
            <% end %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
