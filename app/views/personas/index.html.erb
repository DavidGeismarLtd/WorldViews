<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-gradient-to-r from-purple-600 to-indigo-600 text-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16 sm:py-24">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold mb-6">
          Meet the Personas
        </h1>
        <p class="text-xl sm:text-2xl text-white/90 max-w-3xl mx-auto">
          Six different worldviews. Same news. Wildly different interpretations.
        </p>
        <p class="text-lg text-white/75 mt-4 italic">
          "The news, seen through everyone's delusions"
        </p>
      </div>
    </div>

    <!-- Decorative wave -->
    <div class="relative">
      <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-12">
        <path d="M0 0L60 10C120 20 240 40 360 46.7C480 53 600 47 720 43.3C840 40 960 40 1080 46.7C1200 53 1320 67 1380 73.3L1440 80V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0V0Z" fill="#F9FAFB"/>
      </svg>
    </div>
  </div>

  <!-- Personas Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @personas.each do |persona| %>
        <%= link_to persona_path(persona), class: "block group" do %>
          <div class="bg-white rounded-3xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden transform hover:-translate-y-2 hover:scale-105 border-2 border-transparent hover:border-opacity-50" style="border-color: <%= persona.color_primary %>;">

            <!-- Avatar Section - The Star! -->
            <div class="relative pt-8 pb-4 px-6" style="background: linear-gradient(135deg, <%= persona.color_primary %>15 0%, <%= persona.color_secondary %>15 100%);">
              <div class="flex justify-center">
                <% if persona.avatar_url.present? %>
                  <div class="w-40 h-40 rounded-full ring-4 ring-white shadow-2xl overflow-hidden bg-white group-hover:ring-8 transition-all duration-300" style="box-shadow: 0 20px 60px -15px <%= persona.color_primary %>80;">
                    <%= image_tag persona.avatar_url, alt: persona.name, class: "w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-300" %>
                  </div>
                <% else %>
                  <div class="w-40 h-40 rounded-full ring-4 ring-white shadow-2xl bg-white flex items-center justify-center group-hover:ring-8 transition-all duration-300" style="box-shadow: 0 20px 60px -15px <%= persona.color_primary %>80;">
                    <span class="text-6xl font-bold" style="color: <%= persona.color_primary %>;">
                      <%= persona.name.first %>
                    </span>
                  </div>
                <% end %>
              </div>
            </div>

            <!-- Card Body -->
            <div class="pt-6 pb-8 px-6 text-center">
              <h2 class="text-2xl font-bold text-gray-900 mb-3 group-hover:text-opacity-80 transition-colors" style="color: <%= persona.color_primary %>;">
                <%= persona.name %>
              </h2>

              <p class="text-gray-600 italic mb-6 text-sm leading-relaxed min-h-[3rem]">
                "<%= persona.description %>"
              </p>

              <!-- Stats -->
              <div class="grid grid-cols-2 gap-4 mb-6">
                <div class="bg-gray-50 rounded-xl p-3">
                  <div class="text-2xl font-bold" style="color: <%= persona.color_primary %>;">
                    <%= persona.total_interpretations %>
                  </div>
                  <div class="text-xs text-gray-500 font-medium">Hot Takes</div>
                </div>
                <div class="bg-gray-50 rounded-xl p-3">
                  <div class="text-2xl font-bold" style="color: <%= persona.color_primary %>;">
                    <%= number_to_human(persona.average_interpretation_length) %>
                  </div>
                  <div class="text-xs text-gray-500 font-medium">Avg Words</div>
                </div>
              </div>

              <!-- View Details Button -->
              <div class="mt-4">
                <span class="inline-flex items-center px-6 py-3 rounded-xl font-semibold text-white transition-all duration-300 group-hover:shadow-lg transform group-hover:scale-105" style="background: linear-gradient(135deg, <%= persona.color_primary %> 0%, <%= persona.color_secondary %> 100%);">
                  View Worldview
                  <svg class="ml-2 w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
                  </svg>
                </span>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- Call to Action -->
    <div class="mt-16 text-center">
      <div class="bg-white rounded-2xl shadow-lg p-8 max-w-3xl mx-auto">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">
          Ready to See How They Interpret the News?
        </h3>
        <p class="text-gray-600 mb-6">
          Check out the latest stories and watch these personas react in real-time.
        </p>
        <%= link_to root_path, class: "inline-flex items-center px-8 py-3 bg-gradient-to-r from-purple-600 to-indigo-600 text-white rounded-lg font-medium hover:opacity-90 transition-opacity" do %>
          <svg class="mr-2 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"></path>
          </svg>
          Browse News Stories
        <% end %>
      </div>
    </div>
  </div>
</div>
